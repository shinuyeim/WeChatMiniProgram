<!--pages/register/register.wxml-->
<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-section">
        <view class="weui-cells__title">输入你的用户名</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" maxlength="20" placeholder="最大输入长度为20" name="user_name" />
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="weui-cells__title">输入你的密码</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" password type="text" maxlength="16" placeholder="这是一个密码输入框" name="password" />
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="weui-cells__title">输入你的名字</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" maxlength="20" placeholder="最大输入长度为20" name="name" />
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="weui-cells__title">输入你的电话号码</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" type="number" placeholder="这是一个电话号码输入框" name="phone" />
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="weui-cells__title">输入你的住址</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input class="weui-input" placeholder="这是一个地址输入框" name="address" />
          </view>
        </view>
      </view>


      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">注册</button>
      </view>
    </form>
  </view>
</view>